{
  "name": "task-manager-app",
  "version": "1.0.0",
  "description": "A comprehensive CRUD task management application with testing",
  "main": "js/app.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/validators.test.js tests/advancedFilters.test.js tests/dateUtils.test.js tests/storage.test.js",
    "test:bdd": "jest tests/steps/",
    "test:ui": "jest tests/ui.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "python -m http.server 8000"
  },
  "devDependencies": {
    "chromedriver": "^143.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "selenium-webdriver": "^4.39.0",
    "jest-cucumber": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^uuid$": "<rootDir>/node_modules/uuid/dist/index.js"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(uuid|jest-cucumber)/)"
    ],
    "setupFiles": ["<rootDir>/tests/jest.setup.js"],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/app.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "keywords": [
    "task-manager",
    "crud",
    "javascript",
    "testing"
  ],
  "author": "Student",
  "license": "MIT"
}
